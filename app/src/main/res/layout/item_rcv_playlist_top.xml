<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:background="@color/bg_app">

        <ImageView
            android:id="@+id/img_thumb"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="188:128"
            android:scaleType="centerCrop"
            android:src="@color/bg_app"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/layout_text"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="@dimen/dp7"
            android:layout_marginStart="@dimen/dp20"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp14"
                android:text="My Top Tracks" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/dp4"
                android:layout_height="wrap_content"
                android:textColor="@color/color_item_text_playlist_top"
                android:text="100 Songs"
                android:textSize="@dimen/sp11" />

        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_playlist_play"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/layout_text"
            android:layout_marginEnd="@dimen/dp15"
            app:layout_constraintBottom_toBottomOf="@id/layout_text" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>