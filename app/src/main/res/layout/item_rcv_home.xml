<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_marginTop="@dimen/dp25"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:textColor="@color/white"
            android:textSize="@dimen/sp15"
            tools:text="Hot Recommend" />

        <TextView
            android:id="@+id/tv_see_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ED8770"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:textSize="11sp"
            android:text="View All" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_see_all"
            android:layout_marginTop="18.5dp"
            tools:listitem="@layout/item_rcv_host_recommend" />

        <View
            android:id="@+id/diveder"
            android:background="@color/color_bg_divider_home"
            android:layout_marginTop="@dimen/dp10"
            android:layout_below="@id/rcv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp1" />

    </RelativeLayout>

</layout>