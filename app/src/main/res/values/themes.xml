<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MockProject_Music" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:listPreferredItemHeightSmall">40dp</item>

        <item name="android:itemTextAppearance">@style/myCustomMenuTextAppearance</item>
        <item name="popupMenuStyle">@style/MyPopup</item>
        <!-- Status bar color. -->
        <item name="android:windowContentTransitions" tools:ignore="NewApi">true</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
        <!--        <item name="status"-->
        <item name="android:statusBarColor">@color/bg_app</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="MyMusicTheme" parent="Theme.AppCompat">

        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>

    </style>


    <!--    <style name="bottom_navigation_textappreance"-->
    <!--        parent="Widget.Design.BottomNavigationView">-->
    <!--        <item name="fontFamily">@font/fira_sans_bold</item>-->
    <!--    </style>-->
    <style name="myCustomMenuTextAppearance" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/sp12</item>
    </style>

    <style name="TextAppearance.Widget.Event.Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <!--Any text styling can be done here-->
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="MyPopup" parent="@style/Widget.MaterialComponents.PopupMenu">
        <item name="android:popupBackground">#383B49</item>

    </style>


</resources>